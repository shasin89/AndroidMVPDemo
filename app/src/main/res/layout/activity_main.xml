<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.shasin.mvp_demo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textSize="12dp"
            android:textColor="#969696"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characters Left: "
            android:textSize="12dp"
            android:textColor="#969696"
            android:layout_toStartOf="@id/characterLeft"
            android:layout_toLeftOf="@+id/characterLeft"
            />

        <TextView
            android:id="@+id/characterLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="12dp"
            android:textColor="#969696"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />


        <EditText
            android:id="@+id/note"
            android:gravity="top"
            android:layout_below="@id/characterLeft"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="14dp"
            android:textColor="#969696"
            android:maxLength="200"
            android:background="@drawable/background"/>


    </RelativeLayout>

</LinearLayout>
